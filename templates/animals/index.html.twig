{% extends 'base.html.twig' %}

{% block title %}Liste des animaux{% endblock %}

{% block content %}
<div>   
    <h1 class="font-custom font-semibold text-3xl text-custom-black mt-2">Liste des animaux</h1>
    <div class="flex items-center justify-between w-full mt-6">
        <div class="flex py-8 align-middle items-center gap-4 font-medium">
        {% set displayedBreeds = [] %}
        {% for animal in animals %}
            {% if animal.breed not in displayedBreeds %}
                <button id="btnDemande" class="filter-btn text-sm font-medium border-2 border-custom-2 bg-custom-4 text-custom-2 py-2 px-4 rounded-full hover:text-custom-4 hover:bg-custom-2 transition-colors duration-150 ease-in-out" data-breed="{{ animal.breed }}">{{ animal.breed }}</button>
                {% set displayedBreeds = displayedBreeds | merge([animal.breed]) %}
            {% endif %}
        {% endfor %}
        </div>
        <div class="flex flex-row justify-center items-center gap-4">
            <div class="mx-2 items-center flex bg-custom-4 border-2 border-custom-2 rounded-full py-2 px-4">
                <label for="rechercher">
                    <input class="outline-none focus:outline-none px-2 bg-custom-4" id="search-field" placeholder="Rechercher">
                </label>
            </div>
            <a href="{{ path('app_animals_new') }}">
                <div class="items-center flex py-2 px-4 bg-custom-2 hover:bg-custom-4 text-custom-4 hover:text-custom-2 cursor-pointer border-2 border-custom-2 rounded-full transition-colors duration-150 ease-in-out font-semibold">
                    <div class="">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                        </svg>
                    </div>
                    <div class="mx-2">Ajouter un animal</div>
                </div>
            </a>
        </div>
    </div>

    <div class="overflow-y-auto custom-scrollbar table-container size-tab w-full rounded-t-2xl">
        <table class="w-full table-auto overflow-x-auto" id="userTable">
            <thead class="bg-custom-gray-1 w-full text-center">
                <tr class="h-16">
                    <th>
                        <div class="flex items-center justify-center  my-2 mx-2 text-base">
                            <button class="mx-1">Nom</button>
                        </div>
                    </th>
                    <th>
                        <div class="flex items-center justify-center  my-2 mx-2 text-base">
                            <button class="mx-1">Race</button>
                        </div>
                    </th>
                    <th>
                        <div class="flex items-center justify-center  my-2 mx-2 text-base">
                            <button class="mx-1">Nombre de vue</button>
                        </div>
                    </th>
                    <th>
                        <div class="flex items-center justify-center  my-2 mx-2 text-base">
                            <button class="mx-1">Image</button>
                        </div>
                    </th>
                </tr>
            </thead>
            <tbody id="table-id">
            {% set alternatingClass = '' %}
            {% for animal in animals %}
                {% set alternatingClass = alternatingClass == 'bg-custom-white' ? 'bg-custom-gray-1' : 'bg-custom-white' %}
                <tr class="table-row {{ alternatingClass }} text-center" data-animal-breed="{{ animal.breed }}" onclick="window.location.href = '{{ path('app_animals_show', {'id': animal.id}) }}';" style="cursor: pointer;">
                    <td class="py-3 text-sm p-2">{{ animal.name }}</td>
                    <td class="py-3 text-sm">{{ animal.breed }}</td>
                    <td class="py-3 text-sm">{{ animal.view }}</td>
                    <td class="py-3 text-sm">
                    {% set firstPicture = animal.pictures|first %}
                    {% if firstPicture %}
                        <img src="{{ asset('uploads/' ~ firstPicture.filename) }}" class="w-16 h-16 cover rounded-full" alt="habitat Picture">
                    {% endif %}
                    </td>
                    <td class="py-3 text-sm items-center align-middle" style="padding: 0; text-align: center;"></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function () {
    const buttons = document.querySelectorAll('.filter-btn');
    const rows = document.querySelectorAll('.table-row');
    let activeBreed = null;

    function applyFilter(breed) {
        if (activeBreed === breed) {
            activeBreed = null;
            buttons.forEach(btn => btn.classList.remove('active'));
            rows.forEach(row => row.style.display = '');
        } else {
            activeBreed = breed;
            buttons.forEach(btn => btn.classList.remove('breed'));
            buttons.forEach(button => {
                if (button.getAttribute('data-breed') === breed) {
                    button.classList.add('active');
                }
            });
            rows.forEach(row => {
                const rowBreed = row.getAttribute('data-animal-breed');
                if (rowBreed !== breed) {
                    row.style.display = 'none';
                } else {
                    row.style.display = '';
                }
            });
        }
    }
    buttons.forEach(button => {
        button.addEventListener('click', function () {
            const breed = this.getAttribute('data-breed');
            applyFilter(breed);
        });
    });
    paginateTable();
});

// Recherche
$("#search-field").on("keyup", function() {
    let value = $(this).val().toLowerCase();
    $("#userTable tbody tr").filter(function() {
    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
});
</script>

{% endblock %}
