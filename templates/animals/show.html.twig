{% extends 'base.html.twig' %}

{% block title %}Voir un animal{% endblock %}

{% block content %}
    <h1 class="text-2xl font-bold mb-4">Voir {{ animal.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ animal.name }}</td>
            </tr>
            <tr>
                <th>Breed</th>
                <td>{{ animal.breed }}</td>
            </tr>
            <tr>
                <th>View</th>
                <td>{{ animal.view }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% for picture in animal.pictures %}
                        <img src="{{ asset('uploads/' ~ picture.filename) }}" class="w-12 h-12 cover" alt="Service Picture">
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Nourriture</th>
                <td>
                    {% for feed in animal.feeds %}
                        <p>{{ feed.food }}</p>
                        <p>{{ feed.quantity }}</p>
                        <p>{{ feed.time ? feed.time|date('d-m-Y') : '' }}</p>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_feed_new', {'animalId': animal.id}) }}">Ajouter de la nourriture</a>
    <a href="{{ path('app_reports_new', {'animalId': animal.id}) }}">Ajouter un rapport</a>

    <a href="{{ path('app_animals_index') }}">Retour</a>

    <a href="{{ path('app_animals_edit', {'id': animal.id}) }}">Modifier</a>

    {{ include('animals/_delete_form.html.twig') }}
{% endblock %}
