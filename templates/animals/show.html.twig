{% extends 'base.html.twig' %}

{% block title %}Voir un animal{% endblock %}

{% block content %}
    <a class="py-2 px-6 bg-custom-2 text-custom-4 rounded-md cursor-pointer font-semibold text-sm hover:shadow-2xl hover:scale-105 hover:duration-200" href="{{ path('app_animals_index') }}">Retour</a>
    <h1 class="text-2xl font-bold mb-4 mt-8">{{ animal.name }}</h1>
    <div class="flex flex-row justify-start items-center gap-8">
        {% if is_granted('ROLE_ADMIN') %}
            <a class="py-2 px-6 bg-custom-2 text-custom-4 rounded-md cursor-pointer font-semibold text-sm hover:shadow-2xl hover:scale-105 hover:duration-200" href="{{ path('app_animals_edit', {'id': animal.id}) }}">Modifier l'animal</a>
            <button class="py-2 px-6 bg-custom-5 text-custom-4 rounded-md cursor-pointer font-semibold text-sm hover:shadow-2xl hover:scale-105 hover:duration-200" id="delete-button">Supprimer</button>
        {% elseif is_granted('ROLE_VETERINAIRE') %}
            <a class="py-2 px-6 bg-custom-2 text-custom-4 rounded-md cursor-pointer font-semibold text-sm hover:shadow-2xl hover:scale-105 hover:duration-200" href="{{ path('app_reports_index', {'animalId': animal.id}) }}">Voir les rapports</a>
            <a class="py-2 px-6 bg-custom-2 text-custom-4 rounded-md cursor-pointer font-semibold text-sm hover:shadow-2xl hover:scale-105 hover:duration-200" href="{{ path('app_reports_animal', {'animalId': animal.id}) }}">Ajouter un raport</a>
            <a class="py-2 px-6 bg-custom-2 text-custom-4 rounded-md cursor-pointer font-semibold text-sm hover:shadow-2xl hover:scale-105 hover:duration-200" href="{{ path('app_feed_index', {'animalId': animal.id}) }}">Historique des repas</a>
        {% elseif is_granted('ROLE_EMPLOYE') %}
            <a class="py-2 px-6 bg-custom-2 text-custom-4 rounded-md cursor-pointer font-semibold text-sm hover:shadow-2xl hover:scale-105 hover:duration-200" href="{{ path('app_feed_new', {'animalId': animal.id}) }}">Ajouter Nourriture</a>
        {% endif %}
    </div>
    <div>
        <div id="animal-details" class="w-2/3 grid grid-cols-1 md:grid-cols-3 gap-4 mt-6">
            <div class="md:col-span-2">
                {% if animal.pictures|length > 0 %}
                    <div class="relative w-full h-full rounded-lg cursor-pointer overflow-hidden group">
                        <img src="{{ asset('uploads/' ~ animal.pictures[0].filename) }}" class="w-full h-full object-cover transition-opacity duration-300 ease-in-out group-hover:opacity-50" alt="Animal sélectionné">
                        {% if is_granted('ROLE_ADMIN') %}
                            <form action="{{ path('app_animals_delete_picture', {id: animal.id, pictureId: animal.pictures[0].id}) }}" method="POST" class="absolute h-full inset-0 flex items-center justify-center text-white bg-[#000] bg-opacity-70 opacity-0 group-hover:opacity-100 transition-opacity duration-300 ease-in-out z-10">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ animal.pictures[0].id) }}">
                                <button type="submit" class="text-custom-4">Supprimer</button>
                            </form>
                        {% endif %}
                    </div>
                {% endif %}
            </div>
            <div class="grid grid-rows-2 gap-4">
                {% if animal.pictures|length > 1 %}
                    <div class="relative w-full h-auto rounded-lg cursor-pointer overflow-hidden group">
                        <img src="{{ asset('uploads/' ~ animal.pictures[1].filename) }}" class="w-full h-full object-cover transition-opacity duration-300 ease-in-out group-hover:opacity-50" alt="Animal sélectionné">
                        {% if is_granted('ROLE_ADMIN') %}
                            <form action="{{ path('app_animals_delete_picture', {id: animal.id, pictureId: animal.pictures[1].id}) }}" method="POST" class="absolute h-full inset-0 flex items-center justify-center text-white bg-[#000] bg-opacity-70 opacity-0 group-hover:opacity-100 transition-opacity duration-300 ease-in-out z-10">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ animal.pictures[1].id) }}">
                                <button type="submit" class="text-custom-4">Supprimer</button>
                            </form>
                        {% endif %}
                    </div>
                {% endif %}
                {% if animal.pictures|length > 2 %}
                    <div class="relative w-full h-auto rounded-lg cursor-pointer overflow-hidden group">
                        <img src="{{ asset('uploads/' ~ animal.pictures[2].filename) }}" class="w-full h-full object-cover transition-opacity duration-300 ease-in-out group-hover:opacity-50" alt="Animal sélectionné">
                        {% if is_granted('ROLE_ADMIN') %}
                            <form action="{{ path('app_animals_delete_picture', {id: animal.id, pictureId: animal.pictures[2].id}) }}" method="POST" class="absolute h-full inset-0 flex items-center justify-center text-white bg-[#000] bg-opacity-70 opacity-0 group-hover:opacity-100 transition-opacity duration-300 ease-in-out z-10">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ animal.pictures[2].id) }}">
                                <button type="submit" class="text-custom-4">Supprimer</button>
                            </form>
                        {% endif %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>


<div id="confirmationModal" class="fixed inset-0 flex items-center justify-center bg-[#000] bg-opacity-70 hidden z-50">
    <div class="bg-custom-4 p-6 w-2/3 h-2/3 rounded-lg shadow-lg relative z-60 flex flex-col justify-center items-center">
        <h2 class="text-lg font-semibold mb-4">Confirmer la suppression</h2>
        <p class="mb-4">Êtes-vous sûr de vouloir supprimer cet animal ?</p>
        <div class="flex justify-center items-center gap-4">
            <button class="py-2 px-6 bg-custom-2 text-custom-4 rounded-md cursor-pointer font-semibold text-sm hover:shadow-2xl hover:scale-105 hover:duration-200" id="cancel-button">Annuler</button>
            <form method="post" action="{{ path('app_animals_delete', {'id': animal.id}) }}" id="delete-form">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ animal.id) }}">
                <button type="submit" class="py-2 px-6 bg-custom-5 text-custom-4 rounded-md cursor-pointer font-semibold text-sm hover:shadow-2xl hover:scale-105 hover:duration-200">Supprimer</button>
            </form>
        </div>
    </div>
</div>

{% endblock %}

