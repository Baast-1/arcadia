<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
    {% for label, messages in app.flashes %}
        <div class="fixed bottom-4 right-4 z-50 flash-message">
            <div class="shadow-lg rounded-lg p-6 max-w-sm w-full text-custom-4" style="background-color: {% if label == 'success' %}var(--custom-2){% elseif label == 'error' %}var(--custom-5){% else %}var(--custom-4){% endif %};">
                <div class="flash-{{ label }}">
                    {% for message in messages %}
                        <p class="text-gray-800">{{ message }}</p>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endfor %}
    {% block body %}
        <div class="min-h-screen flex p-10">
            {% include '_includes/_sidebar.html.twig' with {'user': app.user} %}
            <div class="flex-1 ml-10">
                <p class="text-sm font-light text-end">{{ "now"|date("d F Y - H:i", "Europe/Paris") }}</p>
                {% block content %}{% endblock %}
            </div>
        </div>
    {% endblock %}
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>
</html>