{{ form_start(form) }}
<div class="flex justify-center items-center">
    <div class="flex flex-col md:grid-cols-2 gap-4 p-8 w-7/12">
        <div class="flex flex-col w-full">
            {{ form_label(form.text, 'Commentaire', {'label_attr': {'class': 'font-semibold text-lg'}}) }}
            {{ form_widget(form.text, {'attr': {'class': 'form-control mt-2 border-custom-2 border-2 rounded-lg p-2'}}) }}
            {{ form_errors(form.text) }}
        </div>
        <div class="flex justify-center items-center gap-8 mt-8 col-span-full">
            <button class="py-2 px-6 bg-custom-2 text-custom-4 rounded-md cursor-pointer font-semibold text-sm hover:shadow-2xl hover:scale-105 hover:duration-200">{{ button_label|default('Enregistrer') }}</button>
        </div>
    </div>
</div>
