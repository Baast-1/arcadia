{% extends 'base.html.twig' %}

{% block title %}Liste des animaux{% endblock %}

{% block content %}
<div>   
<a class="py-2 px-6 bg-custom-2 text-custom-4 rounded-md cursor-pointer font-semibold text-sm hover:shadow-2xl hover:scale-105 hover:duration-200" href="{{ path('app_animals_show', {'id': animal.id}) }}">Retour</a>
    <h1 class="font-custom font-semibold text-3xl text-custom-black mt-6">Historique des repas {{ animal.name }}</h1>
    <div class="flex items-center justify-end w-full py-8">
        <div class="flex flex-row justify-center items-center gap-4">
            <div class="mx-2 items-center flex bg-custom-4 border-2 border-custom-2 rounded-full py-2 px-4">
                <label for="rechercher">
                    <input class="outline-none focus:outline-none px-2 bg-custom-4" id="search-field" placeholder="Rechercher">
                </label>
            </div>
        </div>
    </div>

    <div class="overflow-y-auto custom-scrollbar table-container size-tab w-full rounded-t-2xl">
        <table class="w-full table-auto overflow-x-auto" id="userTable">
            <thead class="bg-custom-gray-1 w-full text-center">
                <tr class="h-16">
                    <th>
                        <div class="flex items-center justify-center  my-2 mx-2 text-base">
                            <button class="mx-1">Nourriture</button>
                        </div>
                    </th>
                    <th>
                        <div class="flex items-center justify-center  my-2 mx-2 text-base">
                            <button class="mx-1">Quantit√©</button>
                        </div>
                    </th>
                    <th>
                        <div class="flex items-center justify-center  my-2 mx-2 text-base">
                            <button class="mx-1">Date et jour du repas</button>
                        </div>
                    </th>
                </tr>
            </thead>
            <tbody id="table-id">
            {% set alternatingClass = '' %}
            {% for feed in feeds %}
                {% set alternatingClass = alternatingClass == 'bg-custom-white' ? 'bg-custom-gray-1' : 'bg-custom-white' %}
                <tr class="table-row {{ alternatingClass }} text-center">
                    <td class="py-3 text-sm p-2">{{ feed.food }}</td>
                    <td class="py-3 text-sm">{{ feed.quantity }}</td>
                    <td class="py-3 text-sm">{{ feed.time ? feed.time|date('d-m-Y H:i') : '' }}</td>
                    <td class="py-3 text-sm items-center align-middle" style="padding: 0; text-align: center;"></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function () {
    const buttons = document.querySelectorAll('.filter-btn');
    const rows = document.querySelectorAll('.table-row');
    let activeBreed = null;

    function applyFilter(breed) {
        if (activeBreed === breed) {
            activeBreed = null;
            buttons.forEach(btn => btn.classList.remove('active'));
            rows.forEach(row => row.style.display = '');
        } else {
            activeBreed = breed;
            buttons.forEach(btn => btn.classList.remove('breed'));
            buttons.forEach(button => {
                if (button.getAttribute('data-breed') === breed) {
                    button.classList.add('active');
                }
            });
            rows.forEach(row => {
                const rowBreed = row.getAttribute('data-animal-breed');
                if (rowBreed !== breed) {
                    row.style.display = 'none';
                } else {
                    row.style.display = '';
                }
            });
        }
    }
    buttons.forEach(button => {
        button.addEventListener('click', function () {
            const breed = this.getAttribute('data-breed');
            applyFilter(breed);
        });
    });
    paginateTable();
});

// Recherche
$("#search-field").on("keyup", function() {
    let value = $(this).val().toLowerCase();
    $("#userTable tbody tr").filter(function() {
    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
});
</script>

{% endblock %}
