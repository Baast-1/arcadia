{% extends 'base.html.twig' %}

{% block title %}Habitats{% endblock %}

{% block content %}
    <h1 class="text-2xl font-bold mb-4">{{ habitat.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ habitat.name }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ habitat.picture }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_habitats_index') }}">Retour</a>

    <a href="{{ path('app_habitats_edit', {'id': habitat.id}) }}">Modifier</a>

    {{ include('habitats/_delete_form.html.twig') }}
{% endblock %}
