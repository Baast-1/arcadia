{% extends 'base.html.twig' %}

{% block title %}Habitats{% endblock %}

{% block content %}
    <h1 class="text-2xl font-bold mb-4">{{ habitat.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ habitat.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ habitat.description|raw }}</td>
            <tr>
                <th>Picture</th>
                <td>
                    {% if habitat.picture %}
                        <img src="{{ asset('uploads/' ~ habitat.picture.filename) }}" class="w-12 h-12 cover" alt="habitat Picture">
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>
                    {% for comment in habitat.comments %}
                        <p>{{ comment.text }}</p>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_comments_new', {'habitatId': habitat.id}) }}">Add Comments</a>

    <a href="{{ path('app_habitats_index') }}">Retour</a>

    <a href="{{ path('app_habitats_edit', {'id': habitat.id}) }}">Modifier</a>

    {{ include('habitats/_delete_form.html.twig') }}
{% endblock %}
