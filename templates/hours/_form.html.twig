{{ form_start(form) }}
<div class="flex justify-center items-center mt-24">
    <div class="flex flex-col items-center justify-center gap-4 p-8 w-5/12">
        <div class="flex flex-col w-full">
            {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'font-semibold text-lg'}}) }}
