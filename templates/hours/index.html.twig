{% extends 'base.html.twig' %}

{% block title %}Hours index{% endblock %}

{% block content %}
    <h1 class="text-2xl font-bold mb-4">Liste des horaires</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Start</th>
                <th>End</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hour in hours %}
            <tr>
                <td>{{ hour.name }}</td>
                <td>{{ hour.start ? hour.start|date('H:i') : '' }}</td>
                <td>{{ hour.end ? hour.end|date('H:i') : '' }}</td>
                <td>
                    <a href="{{ path('app_hours_show', {'id': hour.id}) }}">show</a>
                    <a href="{{ path('app_hours_edit', {'id': hour.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_hours_new') }}">Create new</a>
{% endblock %}
