{% extends 'base.html.twig' %}

{% block title %}Hours{% endblock %}

{% block body %}
    <h1>Hours</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hour.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ hour.name }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ hour.start ? hour.start|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ hour.end ? hour.end|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_hours_index') }}">back to list</a>

    <a href="{{ path('app_hours_edit', {'id': hour.id}) }}">edit</a>

    {{ include('hours/_delete_form.html.twig') }}
{% endblock %}
