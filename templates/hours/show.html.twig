{% extends 'base.html.twig' %}

{% block title %}Voir une horaire{% endblock %}

{% block content %}
    <h1 class="text-2xl font-bold mb-4 mt-8">{{ hour.name }}</h1>
    <div class="flex flex-col justify-center items-center mt-24 relative z-10"> 
        <div class="grid grid-cols-1 gap-4 p-8 w-5/12">
            <div class="flex flex-col w-full">
                <p class="font-semibold text-lg ">Nom</p>
                <div class="font-normal text-base">{{ hour.name }}</div>
            </div>
            <div class="flex flex-col w-full">
                <p class="font-semibold text-lg ">Heure d'ouverture</p>
                <div class="font-normal text-base">{{ hour.start ? hour.start|date('H:i') : '' }}</div>
            </div>
            <div class="flex flex-col w-full">
                <p class="font-semibold text-lg ">Heure de fermeture</p>
                <div class="font-normal text-base">{{ hour.end ? hour.end|date('H:i') : '' }}</div>
            </div>
        </div>
        <div class="flex justify-center items-center gap-8">
            <a class="py-2 px-6 bg-custom-2 text-custom-4 rounded-md cursor-pointer font-semibold text-sm hover:shadow-2xl hover:scale-105 hover:duration-200" href="{{ path('app_hours_edit', {'id': hour.id}) }}">Modifier</a>
            <button class="py-2 px-6 bg-custom-5 text-custom-4 rounded-md cursor-pointer font-semibold text-sm hover:shadow-2xl hover:scale-105 hover:duration-200" id="delete-button">Supprimer</button>
        </div>
    </div>


<div id="confirmationModal" class="fixed inset-0 flex items-center justify-center bg-[#000] bg-opacity-70 hidden z-50">
    <div class="bg-custom-4 p-6 w-2/3 h-2/3 rounded-lg shadow-lg relative z-60 flex flex-col justify-center items-center">
        <h2 class="text-lg font-semibold mb-4">Confirmer la suppression</h2>
        <p class="mb-4">Êtes-vous sûr de vouloir supprimer cette horaire ?</p>
        <div class="flex justify-center items-center gap-4">
            <button class="py-2 px-6 bg-custom-2 text-custom-4 rounded-md cursor-pointer font-semibold text-sm hover:shadow-2xl hover:scale-105 hover:duration-200" id="cancel-button">Annuler</button>
            <form method="post" action="{{ path('app_hours_delete', {'id': hour.id}) }}" id="delete-form">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ hour.id) }}">
                <button type="submit" class="py-2 px-6 bg-custom-5 text-custom-4 rounded-md cursor-pointer font-semibold text-sm hover:shadow-2xl hover:scale-105 hover:duration-200">Supprimer</button>
            </form>
        </div>
    </div>
</div>

{% endblock %}
