{% extends 'base.html.twig' %}

{% block title %}Opinions Index{% endblock %}

{% block content %}
    <h1 class="text-2xl font-bold mb-4">Liste des opinions</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Pseudo</th>
                <th>Description</th>
                <th>Visible</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for opinion in opinions %}
            <tr>
                <td>{{ opinion.pseudo }}</td>
                <td>{{ opinion.description }}</td>
                <td>{{ opinion.isVisible ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_opinions_show', {'id': opinion.id}) }}" class="btn btn-primary">Show</a>
                    <a href="{{ path('app_opinions_edit', {'id': opinion.id}) }}" class="btn btn-secondary">Edit</a>
                    <form method="post" action="{{ path('app_opinions_delete', {'id': opinion.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ opinion.id) }}">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_opinions_new') }}">Add Opinion</a>
{% endblock %}
