{% extends 'base.html.twig' %}

{% block title %}Liste des rapports{% endblock %}

{% block content %}
<div>   
    <h1 class="font-custom font-semibold text-3xl text-custom-black mt-2">Liste des rapports</h1>
    <div class="flex items-center justify-between w-full mt-6">
        <div class="flex py-8 align-middle items-center gap-4 font-medium">
        {% for animal in animals %}
            <button id="btnDemande" class="filter-btn text-sm font-medium border-2 border-custom-2 bg-custom-4 text-custom-2 py-2 px-4 rounded-full hover:text-custom-4 hover:bg-custom-2 transition-colors duration-150 ease-in-out" data-name="{{ animal.name }}">{{ animal.name }}</button>
        {% endfor %}
        </div>
        <div class="flex flex-row justify-center items-center gap-4">
            <div class="mx-2 items-center flex bg-custom-4 border-2 border-custom-2 rounded-full py-2 px-4">
                <label for="rechercher">
                    <input class="outline-none focus:outline-none px-2 bg-custom-4" id="search-field" placeholder="Rechercher">
                </label>
            </div>
            <a href="{{ path('app_reports_new') }}">
                <div class="items-center flex py-2 px-4 bg-custom-2 hover:bg-custom-4 text-custom-4 hover:text-custom-2 cursor-pointer border-2 border-custom-2 rounded-full transition-colors duration-150 ease-in-out font-semibold">
                    <div class="">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                        </svg>
                    </div>
                    <div class="mx-2">Ajouter un rapport</div>
                </div>
            </a>
        </div>
    </div>

    <div class="overflow-y-auto custom-scrollbar table-container size-tab w-full rounded-t-2xl">
        <table class="w-full table-auto overflow-x-auto" id="userTable">
            <thead class="bg-custom-gray-1 w-full text-center">
                <tr class="h-16">
                    <th>
                        <div class="flex items-center justify-center  my-2 mx-2 text-base">
                            <button class="mx-1">Animal</button>
                        </div>
                    </th>
                    <th>
                        <div class="flex items-center justify-center  my-2 mx-2 text-base">
                            <button class="mx-1">État de l'animal</button>
                        </div>
                    </th>
                    <th>
                        <div class="flex items-center justify-center  my-2 mx-2 text-base">
                            <button class="mx-1">Nourriture</button>
                        </div>
                    </th>
                    <th>
                        <div class="flex items-center justify-center  my-2 mx-2 text-base">
                            <button class="mx-1">Grammage</button>
                        </div>
                    </th>
                    <th>
                        <div class="flex items-center justify-center  my-2 mx-2 text-base">
                            <button class="mx-1">Détail sur l'animal</button>
                        </div>
                    </th>
                    <th>
                        <div class="flex items-center justify-center  my-2 mx-2 text-base">
                            <button class="mx-1">Date du rapport</button>
                        </div>
                    </th>
                </tr>
            </thead>
            <tbody id="table-id">
            {% set alternatingClass = '' %}
            {% for report in reports %}
                {% set alternatingClass = alternatingClass == 'bg-custom-white' ? 'bg-custom-gray-1' : 'bg-custom-white' %}
                <tr class="table-row {{ alternatingClass }} text-center" data-animal-name="{{ report.animal.name }}" onclick="window.location.href = '{{ path('app_reports_show', {'id': report.id}) }}';" style="cursor: pointer;">
                    <td class="py-3 text-sm p-2">{{ report.animal.name }}</td>
                    <td class="py-3 text-sm">{{ report.state }}</td>
                    <td class="py-3 text-sm">{{ report.food }}</td>
                    <td class="py-3 text-sm">{{ report.foodWeight }} gr</td>
                    <td class="py-3 text-sm">{{ report.detailState }}</td>
                    <td class="py-3 text-sm">{{ report.createdAt ? report.createdAt|date('d-m-Y') : '' }}</td>
                    <td class="py-3 text-sm items-center align-middle" style="padding: 0; text-align: center;"></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function () {
    const buttons = document.querySelectorAll('.filter-btn');
    const rows = document.querySelectorAll('.table-row');
    let activeName = null;

    function applyFilter(name) {
        if (activeName === name) {
            activeName = null;
            buttons.forEach(btn => btn.classList.remove('active'));
            rows.forEach(row => row.style.display = '');
        } else {
            activeName = name;
            buttons.forEach(btn => btn.classList.remove('active'));
            buttons.forEach(button => {
                if (button.getAttribute('data-name') === name) {
                    button.classList.add('active');
                }
            });
            rows.forEach(row => {
                const rowName = row.getAttribute('data-animal-name');
                if (rowName !== name) {
                    row.style.display = 'none';
                } else {
                    row.style.display = '';
                }
            });
        }
    }

    buttons.forEach(button => {
        button.addEventListener('click', function () {
            const name = this.getAttribute('data-name');
            applyFilter(name);
        });
    });
    paginateTable();
});

// Recherche
$("#search-field").on("keyup", function() {
    let value = $(this).val().toLowerCase();
    $("#userTable tbody tr").filter(function() {
    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
});
</script>

{% endblock %}