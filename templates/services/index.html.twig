{% extends 'base.html.twig' %}

{% block title %}Services index{% endblock %}

{% block content %}
    <h1 class="text-2xl font-bold mb-4">Liste des services</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Picture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.name }}</td>
                <td>{{ service.description }}</td>
                <td>
                {% for picture in service.picture %}
                    <img src="{{ asset('uploads/services/' ~ picture.file) }}" class="w-12 h-12 cover" alt="Service Picture">
                {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_services_show', {'id': service.id}) }}">show</a>
                    <a href="{{ path('app_services_edit', {'id': service.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_services_new') }}">Create new</a>
{% endblock %}
