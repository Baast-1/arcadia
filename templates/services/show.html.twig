{% extends 'base.html.twig' %}

{% block title %}Voir un service{% endblock %}

{% block content %}
    <h1 class="text-2xl font-bold mb-4 mt-8">{{ service.name }}</h1>
    <div class="flex justify-start items-center gap-8">
        <a class="py-2 px-6 bg-custom-2 text-custom-4 rounded-md cursor-pointer font-semibold text-sm hover:shadow-2xl hover:scale-105 hover:duration-200" href="{{ path('app_services_edit', {'id': service.id}) }}">Modifier</a>
        <button class="py-2 px-6 bg-custom-5 text-custom-4 rounded-md cursor-pointer font-semibold text-sm hover:shadow-2xl hover:scale-105 hover:duration-200" id="delete-button">Supprimer</button>
    </div>
    <div class="grid grid-cols-2 justify-center items-center relative z-10"> 
        <div class="grid grid-cols-2 gap-4 p-8">
            <div class="flex flex-col w-full">
                <p class="font-semibold text-lg ">Nom</p>
                <div class="font-normal text-base">{{ service.name }}</div>
            </div>
            <div class="flex flex-col w-full col-span-2">
                <p class="font-semibold text-lg ">Description</p>
                <div class="font-normal text-base">{{ service.description }}</div>
            </div>
        </div>
        <div>
            <div class="flex flex-col w-full">
                <div class="font-normal text-base">
                    <img src="{{ asset('uploads/' ~ service.picture.filename) }}" class="cover rounded-xl" alt="habitat Picture">
                </div>
            </div>
        </div>
    </div>


<div id="confirmationModal" class="fixed inset-0 flex items-center justify-center bg-[#000] bg-opacity-70 hidden z-50">
    <div class="bg-custom-4 p-6 w-2/3 h-2/3 rounded-lg shadow-lg relative z-60 flex flex-col justify-center items-center">
        <h2 class="text-lg font-semibold mb-4">Confirmer la suppression</h2>
        <p class="mb-4">Êtes-vous sûr de vouloir supprimer ce service ?</p>
        <div class="flex justify-center items-center gap-4">
            <button class="py-2 px-6 bg-custom-2 text-custom-4 rounded-md cursor-pointer font-semibold text-sm hover:shadow-2xl hover:scale-105 hover:duration-200" id="cancel-button">Annuler</button>
            <form method="post" action="{{ path('app_services_delete', {'id': service.id}) }}" id="delete-form">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
                <button type="submit" class="py-2 px-6 bg-custom-5 text-custom-4 rounded-md cursor-pointer font-semibold text-sm hover:shadow-2xl hover:scale-105 hover:duration-200">Supprimer</button>
            </form>
        </div>
    </div>
</div>

{% endblock %}
