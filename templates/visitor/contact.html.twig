{% extends 'baseVisitor.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<div class="flex flex-col justify-center items-center w-full mt-24 lg:mt-36">
    <div class="max-w-[80rem] w-full flex flex-col justify-center items-center px-4">
        <h1 class="text-2xl lg:text-3xl font-extrabold text-white text-center mb-8">Nous Contacter</h1>

        <div class="bg-white p-6 rounded-2xl w-full max-w-lg">
            {{ form_start(form) }} 
            <div class="mb-4">
                {{ form_label(form.name, 'Votre nom', {'label_attr': {'class': 'font-semibold'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'w-full p-2 border rounded-lg'}}) }}
                {{ form_errors(form.name) }}
            </div>
            <div class="mb-4">
                {{ form_label(form.email, 'Votre email', {'label_attr': {'class': 'font-semibold'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'w-full p-2 border rounded-lg'}}) }}
                {{ form_errors(form.email) }}
            </div>
            <div class="mb-4">
                {{ form_label(form.message, 'Votre message', {'label_attr': {'class': 'font-semibold'}}) }}
                {{ form_widget(form.message, {'attr': {'class': 'w-full p-2 border rounded-lg', 'rows': '5'}}) }}
                {{ form_errors(form.message) }}
            </div>  
            <div class="flex justify-center items-center">
                <button type="submit" class="py-2 px-6 bg-black text-white border-black rounded-md cursor-pointer font-semibold text-sm hover:shadow-2xl">Envoyer</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
