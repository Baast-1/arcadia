{% extends 'baseVisitor.html.twig' %}

{% block title %}Services{% endblock %}

{% block body %}
<div class="flex flex-col justify-center items-center w-full mt-8 lg:mt-36">
    <div class="max-w-[80rem] w-full px-4">
        <div class="grid grid-cols-1 gap-4">
            {% for service in services %}
                <div class="flex flex-col lg:flex-row {% if loop.index is odd %}lg:flex-row-reverse{% endif %} items-center bg-white p-4 rounded-lg shadow-md">
                    <div class="flex-1 lg:w-1/2">
                        <h2 class="text-xl font-semibold">{{ service.name }}</h2>
                        <div class="mt-2">{{ service.description|raw }}</div>
                    </div>
                    {% if service.picture %}
                        <div class="w-full lg:w-1/2 h-48 lg:h-auto flex-shrink-0">
                            <img src="{{ asset('uploads/' ~ service.picture.filename) }}" class="w-full h-full object-cover rounded-lg" alt="Service Picture">
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
